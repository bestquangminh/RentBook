<h1>Shopping Cart</h1>

<div class="container mt-5">
  <div class="row">
    <div class="col col-lg-8">
      <div class="book__container">
      {{#each cartItems}}
        <div class="p-3 book__container-item d-flex align-items-center">
          <img
            class="book__container-img"
            src="{{this.productID.images.[0]}}"
            alt="Card image cap"
          />
          <div class="p-2 w-75 book__container-info">
            <div class="d-flex justify-content-between align-items-center">
              <a
                href=""
                style="width: 231px;"
                class="text-decoration-none link-dark fw-bold book__container-text-title"
              >{{this.productID.name}}</a>
              <p class="m-0 book__container-price">{{this.productID.price}} Ä‘</p>
            <form action="/cart/deleteCartItem" method="POST">
              <input type="hidden" value="{{this.productID._id}}" name="productId" />
              <button class="p-0 book__container-deleteBtn link-danger" type="submit"><i class='fa-solid fa-trash'></i></button>
            </form>
            </div>
          </div>
        </div>
      {{/each}}
      </div>
    </div>
    <div class="col col-lg-4">
      <div class="summary">
        <h1 class="summary__title text-center">Summary</h1>
        <div class="summary__quantity d-flex justify-content-between">
          <p>Quantity</p>
          <p>{{cartItemCount}}</p>
        </div>
        <div class="summary__total d-flex justify-content-between">
          <p class="fw-bold">Total</p>
          <p class="text-danger">{{totalPrice}}</p>
        </div>
        <form action="/order" method="GET">
          <button type="submit" class="orderBtn"><p class="m-0 fw-bold">Order Now!</p></button>
        </form>
      </div>
    </div>
  </div>
</div>
